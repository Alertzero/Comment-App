<div id="<%= dom_id message %>" class="my-3 border">

  
  <%= simple_format(message.body) %>
  
  <%= message.cached_votes_total%>
  <%= message.cached_votes_score%>
  <%= message.cached_votes_up%>
  <%= message.cached_votes_down%>
  <%= message.cached_weighted_score%>
  <%= message.cached_weighted_total%>
  <%= message.cached_weighted_average%>

<div>

  Wrote by <%= message.user.email %> on <%= message.created_at.strftime('%d %B %Y, %H:%M') %>
</div>

  <%= button_to 'Like', [:upvote, @inbox, message], method: :patch, data: { turbo: "false" }, class: "btn btn-primary btn-xs", form: {style: 'display:inline-block;'} %>
  <%= button_to "Destroy", inbox_message_path(@inbox, message), method: :delete, class: "btn btn-danger btn-xs", form: {style: 'display:inline-block;'} %>





</div>
