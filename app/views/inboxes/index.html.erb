<p style="color: green"><%= notice %></p>

<h1>Inboxes</h1>

<div id="inboxes">
  <% @inboxes.each do |inbox| %>
    <%= render inbox %>
    <p class="mt-3">
      <%= link_to "Show this inbox", inbox, class: "btn btn-primary btn-xs" %>
    </p>
  <% end %>
</div>

<%= link_to "New inbox", new_inbox_path %>
